[Дана прямоугольная матрица целых чисел. Необходимо элементы этой матрицы записать в одномерный массив.]
var a:array [1..100,1..100] of integer;
b:array [1..100] of integer;
i,j,m,n,t:integer;
begin
  readln(n);
  readln(m);
  randomize;
  for i:=1 to n do begin
    for j:=1 to n do begin
      a[i,j]:=random(1999)-999;
      writeln(a[i,j]);
    end;
  end;
  t:=0;
  for i:=1 to n do begin
    for j:=1 to m do begin
      t:=t+1;
      b[t]:=a[i,j];
      writeln(b[t]);
    end;
  end;
  readln;
end.
